  var services = [
    {
      text: 'Мастер-классы',
      img: require('media/content/services-img1.jpg?as=webp'),
    },
    {
      text: 'Выездные мастер-классы',
      img: require('media/content/services-img2.jpg?as=webp'),
    },
    {
      text: 'Мероприятия под ключ',
      img: require('media/content/services-img3.jpg?as=webp'),
    },
    {
      text: 'Магазин',
      img: require('media/content/services-img4.jpg?as=webp'),
    },
    {
      text: 'Сертификаты',
      img: require('media/content/services-img5.jpg?as=webp'),
    },
    {
