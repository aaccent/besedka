      img: require('media/content/services-img6.jpg?as=webp'),
    },
    {
      text: 'Кулинария',
      img: require('media/content/services-img7.jpg?as=webp'),
    },
  ]

mixin services(props)
  -
    props = Object.assign({
      title: '',
    }, props)

  +section.services
    h2.services__title.section-title= props.title
    .swiper.services__swiper
      ul.services__list.swiper-wrapper
        each service in services
          li.services__item.swiper-slide
            +card(service)
      .swiper-scrollbar