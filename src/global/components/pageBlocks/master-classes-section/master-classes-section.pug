include layout/utils
include ui/card/card
include ui/dropdown/dropdown

mixin master-classses-section(props)
  -
    props = Object.assign({
      filter: false,
    }, props)

  +section.master-classes-section
    if props.filter
      .master-classes-section__filter-wrapper
        +btn('mobile-filter').master-classes-section__filter-title Сортировка
        .master-classes-section__filter
          +wrapBreak: +btn('mobile-filter').master-classes-section__filter-mobile-button
          +dropdown({ title: 'Сначала недорогие' })
          +dropdown({ title: 'Недавно добавленные' })
          +dropdown({ title: 'По алфавиту' })
    .master-classes-section__list
      each _ in Array(12)
        +card({ text: 'Категория мастер-класса 4' })
    .btn.view-all показать ещё